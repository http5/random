{
    "name": "http5/random",
    "description": "Deterministic pseudo-random generators library with dozens of useful functions and several sources of randomness",
    "keywords": [
        "random number generator",
        "prng",
        "random",
        "pseudo random",
        "rng",
        "rnd",
        "php",
        "mersenne twister",
        "xorshift",
        "ziggurat algorithm",
        "gaussian distribution",
        "normal distribution",
        "uniform distribution"
    ],
    "authors": [
        {
            "name": "SavvoT",
            "email": "savvot@ya.ru"
        }
    ],
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "Http5\\Random\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Http5\\Random\\Tests\\": "tests/"
        }
    }
}
